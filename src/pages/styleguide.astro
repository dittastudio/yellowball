---
import Layout from "../layouts/Layout.astro";
import AppHeaderLogo from "@/components/App/HeaderLogo.astro";
import BlockCarouselProjects from "@/components/Block/CarouselProjects.astro";
import Button from "@/components/Elements/Button.astro";
import CardProject from "@/components/Card/Project.astro";
import Chip from "@/components/Elements/Chip.astro";
import Cube from "@/components/Elements/Cube.astro";
import HeadingBanner from "@/components/Block/HeadingBanner.astro";
import HeroText from "@/components/Block/HeroText.astro";
import Icon from "@/components/Elements/Icon.astro";
import LayoutLines from "@/components/Layout/Lines.astro";
import ServiceCards from "@/components/Block/ServiceCards.astro";
import ServiceItem from "@/components/Elements/ServiceItem.astro";

const imageMobileTest: ImageObject = {
  src: "/images/portrait-1.jpg",
  alt: "portrait 1",
  width: 900,
  height: 1600,
};

const imageDesktopTest: ImageObject = {
  src: "/images/landscape-1.jpg",
  alt: "landscape 1",
  width: 1600,
  height: 900,
};

const sgSection = "wrapper my-100";
const sgHeading = "font-heading font-bold text-21 my-20 opacity-50";
---

<Layout title="Styleguide">
  <main class="mt-200">
    <section class={sgSection}>
      <h1 class={sgHeading}>Logo</h1>

      <div class="flex flex-wrap gap-8">
        <AppHeaderLogo />
      </div>
    </section>

    <section class={sgSection}>
      <h1 class={sgHeading}>Buttons</h1>

      <div class="flex flex-wrap gap-8">
        <button type="button">
          <Button text="Let's Chat" hasArrow />
        </button>

        <button type="button">
          <Button text="View all projects" hasArrow />
        </button>

        <button type="button">
          <Button text="All posts" hasArrow />
        </button>

        <button type="button">
          <Button text="Speak to a Web Expert" hasArrow />
        </button>

        <button type="button">
          <Button text="View all projects" theme="white-border" />
        </button>
      </div>
    </section>

    <section class={sgSection}>
      <h1 class={sgHeading}>Chips</h1>

      <div class="flex flex-wrap gap-8">
        <Chip title="PPC Team" class="bg-blue" />
        <Chip title="Design Team" class="bg-yellow" />
        <Chip title="SEO Team" class="bg-green" />
        <Chip title="Developers" class="bg-grey" />
      </div>
    </section>

    <section class={sgSection}>
      <h1 class={sgHeading}>Cubes</h1>

      <div class="flex flex-wrap gap-8">
        <Cube iconSize="lg">
          <Icon name="logo-figma" />
        </Cube>

        <Cube iconSize="lg">
          <Icon name="logo-wp" />
        </Cube>

        <Cube iconSize="lg">
          <Icon name="logo-woo" />
        </Cube>

        <Cube iconSize="lg">
          <Icon name="logo-laravel" />
        </Cube>

        <Cube>
          <Icon name="logo-white-label" />
        </Cube>

        <Cube>
          <Icon name="logo-ecommerce" />
        </Cube>

        <Cube color="green">
          <Icon name="service-paper-magnifier" />
        </Cube>

        <Cube color="blue">
          <Icon name="service-paper-magnifier" />
        </Cube>

        <Cube color="yellow">
          <Icon name="service-paper-magnifier" />
        </Cube>

        <Cube color="purple">
          <Icon name="service-paper-magnifier" />
        </Cube>
      </div>
    </section>

    <section class={sgSection}>
      <h1 class={sgHeading}>Shapes</h1>

      <div class="flex flex-wrap gap-8">
        <Icon name="shape-triangle" class="block w-20 text-yellow" />
        <Icon name="shape-square" class="block w-20 text-green" />
        <Icon name="shape-circle" class="block w-20 text-blue" />
      </div>
    </section>

    <section class={sgSection}>
      <h1 class={sgHeading}>Service</h1>
      <p class="font-semibold text-15 my-20">&lt;ServiceItem /&gt;</p>

      <ServiceItem
        headline="WordPress Development"
        description="Custom WordPress websites designed for flexibility, performance, and scalability. Power your brand with a platform trusted by millions."
      >
        <Cube slot="icon" iconSize="lg">
          <Icon name="logo-wp" />
        </Cube>
      </ServiceItem>
    </section>

    <section class={sgSection}>
      <h1 class={sgHeading}>Blocks</h1>

      <p class="font-semibold text-15 my-20">&lt;HeadingBanner /&gt;</p>
      <HeadingBanner />

      <p class="font-semibold text-15 my-20">&lt;ServiceCards /&gt;</p>
      <ServiceCards />

      <p class="font-semibold text-15 my-20">&lt;HeroText /&gt;</p>
      <HeroText
        headline="Meet a few of the experts behind your SEO success"
        description="We have a globally distributed team of SEO experts across offices in London and South Africa. Here's a glimpse of some of the talented specialists you could be working with. Each brings a wealth of experience and a passion for driving results."
      />
    </section>

    <section class="bg-cream text-navy">
      <LayoutLines theme="light">
        <HeadingBanner />
      </LayoutLines>
    </section>

    <section class={sgSection}>
      <h1 class={sgHeading}>Card Project</h1>

      <CardProject
        imageMobile={imageMobileTest}
        imageDesktop={imageDesktopTest}
      />
    </section>

    <BlockCarouselProjects />
  </main>
</Layout>
