      </div>
    </StyleguideSection>

    <StyleguideSection title="Buttons">
      <div class="flex flex-wrap gap-8">
        <button type="button">
          <Button text="Button" hasArrow />
        </button>

        <button type="button">
          <Button
            text="Button"
            options={{
              textColor: 'white',
              bgColor: 'navy',
              borderColor: 'white',
            }}
          />
        </button>
      </div>

      <div class="bg-yellow flex flex-wrap gap-8 p-20 mt-40">
        <button type="button">
          <Button
            text="Button"
            optionsHover={{
              textColor: 'white',
              bgColor: 'navy',
            }}
            hasArrow
          />
        </button>

        <button type="button">
          <Button
            text="Button"
            options={{
              textColor: 'white',
              bgColor: 'navy',
              borderColor: 'transparent',
            }}
            optionsHover={{
              textColor: 'navy',
              bgColor: 'white',
            }}
          />
        </button>
      </div>

      <div class="bg-cream flex flex-wrap gap-8 p-20 mt-40">
        <button type="button">
          <Button
            text="Button"
            options={{
              textColor: 'white',
              bgColor: 'navy',
              borderColor: 'transparent',
            }}
            optionsHover={{
              textColor: 'white',
              bgColor: 'navy-light',
            }}
            hasArrow
          />
        </button>

        <button type="button">
          <Button
            text="Button"
            options={{
              borderColor: 'grey',
            }}
            optionsHover={{
              bgColor: 'white',
              borderColor: 'navy',
            }}
          />
