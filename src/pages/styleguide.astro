    </StyleguideSection>

    <StyleguideSection title="Card Post">
      <div class={classCardGrid3}>
        <CardPost
          tags={[
            { title: 'Web Design', color: 'yellow' },
            { title: 'SEO', color: 'green' },
          ]}
