      <br />

      <a class="block" href="/">
        <LinkArrow class="font-heading text-24 font-semibold">
          This is a link larger link
        </LinkArrow>
      </a>
    </StyleguideSection>

    <StyleguideSection title="Tag List">
      <TagList
        items={[
          { title: 'SEO', color: 'green' },
          { title: 'Web Design', color: 'yellow' },
          { title: 'PPC', color: 'blue' },
          { title: 'SEO', color: 'green' },
        ]}
      />

      <br />

      <TagList
        size="small"
        items={[
          { title: 'Wrapping dots test', color: 'green' },
          { title: 'Web Design', color: 'yellow' },
          { title: 'PPC', color: 'blue' },
          { title: 'SEO', color: 'green' },
          { title: 'Web Design', color: 'yellow' },
          { title: 'PPC', color: 'blue' },
          { title: 'SEO', color: 'green' },
          { title: 'Web Design', color: 'yellow' },
          { title: 'PPC', color: 'blue' },
        ]}
      />

      <br />

      <TagList
        size="large"
        items={[
          { title: 'SEO', color: 'green' },
          { title: 'Web Design', color: 'yellow' },
          { title: 'PPC', color: 'blue' },
        ]}
      />

      <br />

      <TagList
        size="large"
        items={[
          { title: 'Wrapping dots test', color: 'green' },
          { title: 'Web Design', color: 'yellow' },
          { title: 'PPC', color: 'blue' },
          { title: 'SEO', color: 'green' },
          { title: 'Web Design', color: 'yellow' },
          { title: 'PPC', color: 'blue' },
          { title: 'SEO', color: 'green' },
          { title: 'Web Design', color: 'yellow' },
          { title: 'PPC', color: 'blue' },
        ]}
      />
    </StyleguideSection>

    <StyleguideSection title="Cubes">
      <div class="flex flex-wrap gap-8">
        <CubeIcon
          icon={{ type: 'logo', name: 'logo-figma', hover: 'logo-figma-hover' }}
        />

        <CubeIcon
          icon={{ type: 'logo', name: 'logo-wp', hover: 'logo-wp-hover' }}
        />

        <CubeIcon
          icon={{ type: 'logo', name: 'logo-woo', hover: 'logo-woo-hover' }}
        />

        <CubeIcon
          icon={{
            type: 'logo',
            name: 'logo-laravel',
            hover: 'logo-laravel-hover',
          }}
        />

        <CubeIcon icon={{ type: 'outline', name: 'outline-info-paper' }} />

        <CubeIcon icon={{ type: 'outline', name: 'outline-info-basket' }} />

