---
// import LayoutLines from '@/components/Layout/Lines.astro';
import AccordionItem from '@/components/Accordion/Item.astro';
import AppHeaderLogo from '@/components/App/HeaderLogo.astro';
import Breadcrumb from '@/components/Elements/Breadcrumb.astro';
import Button from '@/components/Elements/Button.astro';
import CardInsight from '@/components/Card/Insight.astro';
import CardProject from '@/components/Card/Project.astro';
import CardProfile from '@/components/Card/Profile.astro';
import CardRating from '@/components/Card/Rating.astro';
import Cube from '@/components/Elements/Cube.astro';
import Cursor from '@/components/Elements/Cursor.astro';
import Icon from '@/components/Elements/Icon.astro';
import Layout from '@/layouts/Layout.astro';
import LinkArrow from '@/components/Elements/LinkArrow.astro';
import ServiceItem from '@/components/Elements/ServiceItem.astro';
import StyleguideSection from '@/components/Tools/StyleguideSection.astro';

const imageMobileTest: ImageObject = {
  src: '/images/portrait-1.webp',
  alt: 'portrait 1',
  width: 900,
  height: 1600,
};

const imageDesktopTest: ImageObject = {
  src: '/images/landscape-1.webp',
  alt: 'landscape 1',
  width: 1600,
  height: 900,
};
---

<Layout title="Styleguide">
  <main>
    <section
      class="wrapper font-heading text-fluid-h1 font-semibold text-center opacity-50 my-120"
    >
      <h1>Styleguide</h1>
    </section>

    <StyleguideSection title="Logo">
      <div class="flex flex-wrap gap-8">
        <AppHeaderLogo />
      </div>
    </StyleguideSection>

    <StyleguideSection title="Shapes">
      <div class="flex flex-wrap items-end gap-8">
        <Icon name="shape-triangle" class="block w-[23px] h-20 text-yellow" />
        <Icon name="shape-square" class="block size-20 text-green" />
        <Icon name="shape-circle" class="block size-20 text-blue" />
        <Icon name="shape-pentagon" class="block w-[21px] h-20 text-purple" />
      </div>
    </StyleguideSection>

    <StyleguideSection title="Links">
      <a class="block" href="/">
        <LinkArrow class="font-heading text-18 font-bold">
          This is a regular link
        </LinkArrow>
      </a>

      <br />

      <a class="block" href="/">
        <LinkArrow class="font-heading text-24 font-semibold">
          This is a link larger link
        </LinkArrow>
      </a>
    </StyleguideSection>

    <StyleguideSection title="Cubes">
      <div class="flex flex-wrap gap-8">
        <Cube iconSize="lg">
          <Icon name="logo-figma" />
        </Cube>

        <Cube iconSize="lg">
          <Icon name="logo-wp" />
        </Cube>

        <Cube iconSize="lg">
          <Icon name="logo-woo" />
        </Cube>

        <Cube iconSize="lg">
          <Icon name="logo-laravel" />
        </Cube>

        <Cube>
          <Icon name="logo-white-label" />
        </Cube>

        <Cube>
          <Icon name="logo-ecommerce" />
        </Cube>

        <Cube color="green">
          <Icon name="service-paper-magnifier" />
        </Cube>

        <Cube color="blue">
          <Icon name="service-paper-magnifier" />
        </Cube>

        <Cube color="yellow">
          <Icon name="service-paper-magnifier" />
        </Cube>

        <Cube color="purple">
          <Icon name="service-paper-magnifier" />
        </Cube>
      </div>
    </StyleguideSection>

    <StyleguideSection title="Buttons">
      <div class="flex flex-wrap gap-8">
        <button type="button">
          <Button text="Let's Chat" hasArrow />
        </button>

        <button type="button">
          <Button text="View all projects" hasArrow />
        </button>

        <button type="button">
          <Button text="All posts" hasArrow />
        </button>

        <button type="button">
          <Button text="Speak to a Web Expert" hasArrow />
        </button>

        <button type="button">
          <Button text="View all projects" type="white-border" />
        </button>
      </div>
    </StyleguideSection>

    <StyleguideSection title="Cursors">
      <div class="flex flex-wrap gap-8">
        <Cursor title="PPC Team" class="bg-blue" />
        <Cursor title="Design Team" class="bg-yellow" />
        <Cursor title="SEO Team" class="bg-green" />
        <Cursor title="Developers" class="bg-grey" />
      </div>
    </StyleguideSection>

    <StyleguideSection title="Breadcrumbs">
      <div class="flex flex-col items-start gap-8">
        <Breadcrumb
          shape="square"
          color="green"
          items={[
            { title: 'SEO', href: '/' },
            { title: 'SEO Audit Services', href: '/' },
          ]}
        />

        <Breadcrumb
          shape="triangle"
          color="yellow"
          items={[
            { title: 'Web Design', href: '/' },
            { title: 'WordPress Development', href: '/' },
          ]}
        />

        <Breadcrumb
          shape="circle"
          color="blue"
          items={[
            { title: 'PPC', href: '/' },
            { title: 'PPC Ad Campaigns', href: '/' },
          ]}
        />
      </div>
    </StyleguideSection>

    <StyleguideSection title="Accordions">
      <div class="flex flex-wrap gap-8">
        <AccordionItem id="one">
          <h2 slot="header">
            How much does web design and development from Yellowball typically
            cost?
          </h2>

          <div slot="body">
            <p>
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do
              eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut
              enim ad minim veniam, quis nostrud exercitation ullamco laboris
              nisi ut aliquip ex ea commodo consequat.
            </p>

            <p>
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do
              eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut
              enim ad minim veniam, quis nostrud exercitation ullamco laboris
              nisi ut aliquip ex ea commodo consequat.
            </p>
          </div>
        </AccordionItem>
      </div>
    </StyleguideSection>

    <StyleguideSection title="Service Item">
      <ServiceItem
        headline="WordPress Development"
        description="Custom WordPress websites designed for flexibility, performance, and scalability. Power your brand with a platform trusted by millions."
      >
        <Cube slot="icon" iconSize="lg">
          <Icon name="logo-wp" />
        </Cube>
      </ServiceItem>
    </StyleguideSection>

    <!-- <section class="bg-cream text-navy">
      <LayoutLines theme="light">
        <HeadingBanner />
      </LayoutLines>
    </section> -->

    <StyleguideSection title="Card Project">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-30">
        <div class="col-span-10">
          <CardProject
            imageMobile={imageMobileTest}
            imageDesktop={imageDesktopTest}
          />
        </div>
      </div>
    </StyleguideSection>

    <StyleguideSection title="Card Profile">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-30">
        <CardProfile role="Director of SEO" name="Simon Ensor" color="green">
          <img
            class="object-cover size-full"
            src="/images/test-profile-1.webp"
            alt="Simon Ensor"
            width="1"
            height="1"
          />
        </CardProfile>

        <CardProfile role="Director of SEO" name="Simon Ensor" color="yellow">
          <img
            class="object-cover size-full"
            src="/images/test-profile-1.webp"
            alt="Simon Ensor"
            width="1"
            height="1"
          />
        </CardProfile>

        <CardProfile role="Director of SEO" name="Simon Ensor" color="purple">
          <img
            class="object-cover size-full"
            src="/images/test-profile-1.webp"
            alt="Simon Ensor"
            width="1"
            height="1"
          />
        </CardProfile>
      </div>
    </StyleguideSection>

    <StyleguideSection title="Card Insight">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-30">
        <CardInsight
          title="Web Design"
          headline="10 Steps to a Reliable Website Marketing Strategy"
          color="yellow"
          time="3 Min Read"
        >
          <img src="/images/test-laptop.webp" width="500" height="300" alt="" />
        </CardInsight>

        <CardInsight
          title="SEO"
          headline="A WordPress SEO Expert Approach to SEO Friendly Websites That Google Loves"
          color="green"
          time="14 Min Read"
        >
          <img src="/images/test-laptop.webp" width="500" height="300" alt="" />
        </CardInsight>

        <CardInsight
          title="PPC"
          headline="A Beginner's Guide to Website Maintenance"
          color="blue"
          time="3 Min Read"
        >
          <img src="/images/test-laptop.webp" width="500" height="300" alt="" />
        </CardInsight>
      </div>
    </StyleguideSection>

    <StyleguideSection title="Card Rating">
      <div
        class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-30 items-center"
      >
        <CardRating
          quote="I'm delighted with the finished website & delivery of the project."
          name="Isabella"
          company="Ballet with Isabella"
        >
          <img src="/images/test-laptop.webp" width="500" height="300" alt="" />
        </CardRating>

        <CardRating
          quote="I've been really delighted by Yellowball's efficiency and expertise since signing up with them 3 months ago to build a new website, SEO and PPC. They are clearly leaders in their field and I can highly recommend them."
          name="Christopher Eden"
          company="Santis Health"
        />

        <CardRating
          quote="The team understood exactly what I wanted from the beginning."
          name="Pollyanna"
          company="Rosa & Blue"
        >
          <img src="/images/test-laptop.webp" width="500" height="300" alt="" />
        </CardRating>
      </div>
    </StyleguideSection>
  </main>
</Layout>
