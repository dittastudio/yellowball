---
import Layout from '@/layouts/Layout.astro';
import Breadcrumb from '@/components/Elements/Breadcrumb.astro';
import Button from '@/components/Elements/Button.astro';
import CardService from '@/components/Card/Service.astro';
import Cursor from '@/components/Elements/Cursor.astro';
import Cursors from '@/components/Elements/Cursors.astro';
import Icon from '@/components/Elements/Icon.astro';
import LinkArrow from '@/components/Elements/LinkArrow.astro';
import TextReveal from '@/components/Elements/TextReveal.astro';

import BlockButtons from '@/components/Block/Buttons.astro';
import BlockCardStacks from '@/components/Block/CardStacks.astro';
import BlockCarouselProfiles from '@/components/Block/CarouselProfiles.astro';
import BlockFAQs from '@/components/Block/FAQs.astro';
import BlockFeaturedProjects from '@/components/Block/FeaturedProjects.astro';
import BlockHero from '@/components/Block/Hero.astro';
import BlockHeroText from '@/components/Block/HeroText.astro';
import BlockLogoTicker from '@/components/Block/LogoTicker.astro';
import BlockTestimonials from '@/components/Block/Testimonials.astro';
import BlockServiceCards from '@/components/Block/ServiceCards.astro';
import BlockServiceList from '@/components/Block/ServiceList.astro';

import LayoutTheme from '@/components/Layout/Theme.astro';
import LayoutLines from '@/components/Layout/Lines.astro';

const classSection = 'py-50 md:py-[75px]';
const classSectionThick = 'py-100 md:py-[150px]';

const exampleServiceListItems: any = [
  {
    headline: 'SEO Audit Services',
    description:
      'Our SEO audit service combines strategic insight with technical precision. We cover everything from in-depth buyer persona and competitor research to keyword analysis, full onsite and technical audits, and actionable strategies for content and link building.',
    icon: {
      name: 'service-paper-magnifier',
      size: 'sm',
    },
  },
  {
    headline: 'SEO Consultancy',
    description:
      'Our SEO consultancy service offers expert advice tailored to your business. Whether you need support with strategy, technical SEO, or content optimisation, our consultants will guide you in implementing effective SEO that delivers long-term results.',
    icon: {
      name: 'info-speech',
      size: 'sm',
    },
  },
  {
    headline: 'SEO Migration',
    description:
      'Planning a website migration? Ensure your rankings stay intact. Our SEO migration service carefully manages every step of your site transition, from technical fixes to URL mapping, ensuring you maintain traffic and search visibility.',
    icon: {
      name: 'info-migration',
      size: 'sm',
    },
  },
  {
    headline: 'eCommerce SEO',
    description:
      'Maximise your online store’s visibility with our eCommerce SEO services. We specialise in optimising product pages, implementing technical fixes, and driving organic traffic to your site – helping you increase sales and revenue in competitive markets.',
    icon: {
      name: 'logo-ecommerce',
      size: 'sm',
    },
  },
  {
    headline: 'International SEO',
    description:
      'As an experienced international SEO agency, we deliver research-driven SEO services for businesses wanting to establish their brand on a global scale.',
    icon: {
      name: 'info-globe',
      size: 'sm',
    },
  },
  {
    headline: 'Technical SEO',
    description:
      'Lorem ipsum dolor sit amet consectetur. In neque tortor volutpat eget suspendisse. Pellentesque urna tincidunt praesent rhoncus leo varius quis morbi id. Varius etiam porta tortor eget libero auctor non.',
    icon: {
      name: 'info-link',
      size: 'sm',
    },
  },
];
---

<Layout title="SEO">
  <main>
    <section class:list={[classSection, 'relative z-0']}>
      <BlockHero color="green" shape="square">
        <Fragment slot="top">
          <Breadcrumb
            shape="square"
            color="green"
            items={[{ title: 'SEO', href: '/' }]}
          />
        </Fragment>

        <Fragment slot="headline">
          <TextReveal
            onEnter
            tag="h1"
            class="font-heading text-fluid-h1 font-semibold text-balance"
          >
            <span class="text-green">SEO</span> that bounces you to the top
          </TextReveal>
        </Fragment>

        <Fragment slot="bottom">
          <p class="text-17 md:text-21 text-grey text-balance">
            Trusted by clients of all shapes and sizes to increase revenue,
            visibility, leads and conversions online by ranking on page 1 of
            search engines for targeted keywords.

            <a
              href="/"
              class="ml-[0.4em] font-heading font-bold text-15 md:text-18"
            >
              <LinkArrow class="text-green">Let’s Chat</LinkArrow>
            </a>
          </p>
        </Fragment>

        <Fragment slot="extra">
          <Cursors hasExit>
            <Cursor title="SEO Team" class="bg-green" />
          </Cursors>
        </Fragment>
      </BlockHero>
    </section>

    <section class:list={[classSection, 'relative z-1']}>
      <BlockFeaturedProjects />
    </section>

    <section class={classSection}>
      <BlockButtons>
        <a href="/">
          <Button text="Speak to an SEO expert" hasArrow />
        </a>
      </BlockButtons>
    </section>

    <section class={classSection}>
      <BlockLogoTicker />
    </section>

    <section class={classSection}>
      <LayoutTheme theme="light">
        <LayoutLines theme="light" class={classSectionThick}>
          <BlockCardStacks
            description="As a leading boutique, London-based SEO agency, our SEO consultants can help you with everything from eCommerce SEO, SEO Audits, technical SEO and SEO migration."
          >
            <Fragment slot="headline">
              <TextReveal
                tag="h2"
                class="font-heading text-fluid-h2 font-semibold"
              >
                <span class="relative !inline-block">
                  SEO campaigns
                  <Icon
                    name="underline"
                    class="!absolute !block -bottom-[0.25em] -left-[0.1em] right-0 h-[0.5em] [&>svg]:!block [&>svg]:size-full"
                  />
                </span>
                that work as hard as you do
              </TextReveal>
            </Fragment>
          </BlockCardStacks>
        </LayoutLines>
      </LayoutTheme>
    </section>

    <section class={classSection}>
      <BlockServiceList
        color="green"
        items={exampleServiceListItems}
        description="Lorem ipsum dolor sit amet consectetur. Viverra in ut in quis ultrices proin sed eget nunc ornare purus."
      >
        <Fragment slot="headline">
          <TextReveal tag="h3" class="font-heading text-fluid-h3 font-semibold">
            Your all-in-one<br />SEO partner
          </TextReveal>
        </Fragment>

        <Fragment slot="extra">
          <Cursors>
            <Cursor title="SEO Team" class="bg-green" />
          </Cursors>
        </Fragment>
      </BlockServiceList>
    </section>

    <section class={classSection}>
      <LayoutTheme theme="light">
        <LayoutLines theme="light" class={classSectionThick}>
          <BlockTestimonials />
        </LayoutLines>
      </LayoutTheme>
    </section>

    <section class={classSection}>
      <BlockHeroText>
        <Fragment slot="headline">
          <TextReveal
            tag="h2"
            class="font-heading text-fluid-h2 font-semibold text-balance"
          >
            Meet a few of the experts behind your SEO success
          </TextReveal>
        </Fragment>

        <Fragment slot="description">
          <p class="max-w-[65ch] text-17 md:text-21 text-grey text-balance">
            We have a globally distributed team of SEO experts across offices in
            London and South Africa. Here's a glimpse of some of the talented
            specialists you could be working with. Each brings a wealth of
            experience and a passion for driving results.
          </p>
        </Fragment>
      </BlockHeroText>
    </section>

    <section class={classSection}>
      <BlockCarouselProfiles />
    </section>

    <section class={classSection}>
      <BlockFAQs />
    </section>

    <section class={classSection}>
      <BlockHeroText>
        <Fragment slot="headline">
          <TextReveal
            tag="h2"
            class="font-heading text-fluid-h2 font-semibold text-balance"
          >
            Other Services
          </TextReveal>
        </Fragment>
      </BlockHeroText>

      <section class={classSection}>
        <BlockServiceCards>
          <Fragment slot="cards">
            <CardService
              headline="Web Design"
              description="We craft visually stunning, user-friendly websites that engage and convert your audience."
              shape="triangle"
              color="yellow"
            >
              <img
                src="/images/test-service-2.webp"
                width="1032"
                height="430"
                alt=""
              />
            </CardService>

            <CardService
              headline="Paid Search"
              description="Fast-track your brand's visibility with data-driven paid media strategies. Across Google, Instagram, Facebook and LinkedIn, we help you reach your audience instantly."
              shape="circle"
              color="blue"
            >
              <img
                src="/images/test-service-3.webp"
                width="1032"
                height="430"
                alt=""
              />
            </CardService>
          </Fragment>
        </BlockServiceCards>
      </section>
    </section>
  </main>
</Layout>
