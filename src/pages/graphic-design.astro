---
import Layout from '@/layouts/Layout.astro';

import Breadcrumb from '@/components/Elements/Breadcrumb.astro';
import Button from '@/components/Elements/Button.astro';
import CardProjectHero from '@/components/Card/ProjectHero.astro';
import CardPrompt from '@/components/Card/Prompt.astro';
import CardService from '@/components/Card/Service.astro';
import Cursor from '@/components/Elements/Cursor.astro';
import Cursors from '@/components/Elements/Cursors.astro';
import LinkArrow from '@/components/Elements/LinkArrow.astro';
import TextReveal from '@/components/Elements/TextReveal.astro';
import TextUnderline from '@/components/Elements/TextUnderline.astro';

import BlockButtons from '@/components/Block/Buttons.astro';
import BlockCardStacks from '@/components/Block/CardStacks.astro';
import BlockCarouselProfiles from '@/components/Block/CarouselProfiles.astro';
import BlockFAQs from '@/components/Block/FAQs.astro';
import BlockGoogle from '@/components/Block/Google.astro';
import BlockHero from '@/components/Block/Hero.astro';
import BlockHeroText from '@/components/Block/HeroText.astro';
import BlockLogoTicker from '@/components/Block/LogoTicker.astro';
import BlockOverlaps from '@/components/Block/Overlaps.astro';
import BlockPrompt from '@/components/Block/Prompt.astro';
import BlockServiceCards from '@/components/Block/ServiceCards.astro';
import BlockServiceList from '@/components/Block/ServiceList.astro';
import BlockTestimonials from '@/components/Block/Testimonials.astro';

import LayoutTheme from '@/components/Layout/Theme.astro';

const classSection = 'py-50 md:py-[75px]';
const classSectionThick = 'py-100 md:py-[150px]';

const exampleServiceListItems: any = [
  {
    headline: 'Pitch Design Deck',
    description: `From securing Series A funding pitch with a polished deck to wowing clients with a sleek slide deck, we bring clarity and style to every presentation. We transform your content into engaging, easy-to-follow visuals that deliver your message powerfully.`,
    icon: {
      type: 'outline',
      name: 'outline-info-paper',
    },
  },
  {
    headline: 'Branding & Logo Design',
    description: `From initial concept to polished identity, we create brands that cut through the noise. Whether launching something new or refreshing an existing brand, we build designs that make an impact. Our branding designs capture the spirit of your brand while delivering a cohesive message that resonates with your audience.`,
    icon: {
      type: 'outline',
      name: 'outline-info-paper',
    },
  },
  {
    headline: 'Brochure Design',
    description: `Lorem ipsum dolor sit amet consectetur. Cursus proin nam viverra tempor ac in vulputate. Viverra convallis volutpat neque tellus volutpat non vestibulum. Blandit quis vulputate donec ligula. Risus justo ultrices diam massa semper ut.`,
    icon: {
      type: 'outline',
      name: 'outline-info-paper',
    },
  },
  {
    headline: 'Presentation Design',
    description: `Lorem ipsum dolor sit amet consectetur. Cursus proin nam viverra tempor ac in vulputate. Viverra convallis volutpat neque tellus volutpat non vestibulum. Blandit quis vulputate donec ligula. Risus justo ultrices diam massa semper ut.`,
    icon: {
      type: 'outline',
      name: 'outline-info-paper',
    },
  },
  {
    headline: 'Magazine Design',
    description: `Lorem ipsum dolor sit amet consectetur. Cursus proin nam viverra tempor ac in vulputate. Viverra convallis volutpat neque tellus volutpat non vestibulum. Blandit quis vulputate donec ligula. Risus justo ultrices diam massa semper ut.`,
    icon: {
      type: 'outline',
      name: 'outline-info-paper',
    },
  },
  {
    headline: 'Report Design',
    description: `Lorem ipsum dolor sit amet consectetur. Cursus proin nam viverra tempor ac in vulputate. Viverra convallis volutpat neque tellus volutpat non vestibulum. Blandit quis vulputate donec ligula. Risus justo ultrices diam massa semper ut.`,
    icon: {
      type: 'outline',
      name: 'outline-info-paper',
    },
  },
];
---

<Layout title="Graphic Design">
  <main>
    <section>
      <BlockHero color="purple" shape="pentagon">
        <Fragment slot="top">
          <Breadcrumb
            shape="pentagon"
            items={[{ color: 'purple', title: 'Graphic Design', href: '/' }]}
          />
        </Fragment>

        <Fragment slot="headline">
          <TextReveal
            onEnter
            tag="h1"
            class="font-heading text-fluid-h1 text-balance font-semibold"
          >
            <mark class="text-purple">Design</mark> that puts your brand in the spotlight
          </TextReveal>
        </Fragment>

        <Fragment slot="bottom">
          <p class="text-17 md:text-21 text-grey text-balance">
            Specialising in logo and branding, brochures, pitch decks, reports,
            and digital assets. Whether online or offline, we bring your brand
            to life with striking visuals.

            <a
              href="/"
              class="ml-[0.4em] font-heading font-bold text-15 md:text-18"
            >
              <LinkArrow class="text-purple">Let's Chat</LinkArrow>
            </a>
          </p>
        </Fragment>

        <Fragment slot="extra">
          <Cursors hasExit>
            <Cursor
              title="Graphics Team"
              class="bg-purple absolute top-[10%] right-[20%]"
            />
          </Cursors>
        </Fragment>
      </BlockHero>
    </section>

    <section class:list={[classSection, 'relative z-10']}>
      <BlockOverlaps>
        <CardProjectHero
          title="Faith Ibiza"
          headline="VIP Ibiza Concierge Services"
          description="A full redesign of the Faith Ibiza website from the ground up, featuring stunning hero images and videography, delightful animations and an intuitive party calendar."
          cta="Explore Project"
          color="purple"
        >
          <img
            src="/images/test-project-1.webp"
            width="673"
            height="379"
            alt=""
          />
        </CardProjectHero>

        <CardProjectHero
          title="Ballet with Isabella"
          headline="Elite Online Ballet Training"
          description="A bespoke WordPress build featuring a customer login area, a member live area and an on-demand online studio which houses over 100 classes, courses, plans and workshops for ballet students."
          cta="Explore Project"
          color="purple"
        >
          <img
            src="/images/test-project-2.webp"
            width="673"
            height="379"
            alt=""
          />
        </CardProjectHero>

        <CardProjectHero
          title="Shirakawa 1958"
          headline="The World's Rarest Japanese Whisky"
          description="This bespoke WordPress and WooCommerce website build features elegant typography, a sumptuous colour palette and a super-slick checkout flow."
          cta="Explore Project"
          color="purple"
        >
          <img
            src="/images/test-project-3.webp"
            width="673"
            height="379"
            alt=""
          />
        </CardProjectHero>
      </BlockOverlaps>
    </section>

    <section class={classSection}>
      <BlockButtons>
        <a href="/">
          <Button text="Speak to a Design Expert" hasArrow />
        </a>

        <a href="/">
          <Button
            text="View all Projects"
            options={{
              textColor: 'white',
              bgColor: 'navy',
              borderColor: 'white',
            }}
          />
        </a>
      </BlockButtons>
    </section>

    <section class={classSection}>
      <BlockLogoTicker />
    </section>

    <section class={classSection}>
      <LayoutTheme theme="light" class={classSectionThick}>
        <BlockCardStacks
          description="Yellowball isn’t just another digital design agency. We’re your fearless creative partner, blending bold ideas and strategic design to make your brand unforgettable. We don’t just design – we drive results that set you apart and boost your bottom line."
        >
          <Fragment slot="headline">
            <TextReveal
              tag="h2"
              class="font-heading text-fluid-h2 font-semibold"
            >
              Impactful designs that <TextUnderline>captivate</TextUnderline> &amp;
              drive results
            </TextReveal>
          </Fragment>
        </BlockCardStacks>
      </LayoutTheme>
    </section>

    <section class={classSection}>
      <BlockServiceList
        color="purple"
        items={exampleServiceListItems}
        description="We offer an all-inclusive service for everything Graphic Design related, from reports and brochures to magazines, websites, and apps."
      >
        <Fragment slot="headline">
          <TextReveal
            tag="h3"
            class="font-heading text-fluid-h3 font-semibold max-w-[12ch]"
          >
            Your all-in-one<br />Graphic Design<br />partner
          </TextReveal>
        </Fragment>

        <Fragment slot="extra">
          <Cursors>
            <Cursor
              title="Graphics Team"
              class="bg-purple absolute top-[5%] right-[10%]"
            />
          </Cursors>
        </Fragment>
      </BlockServiceList>
    </section>

    <section class={classSection}>
      <LayoutTheme theme="light" class={classSectionThick}>
        <BlockTestimonials />
      </LayoutTheme>
    </section>

    <section class={classSection}>
      <BlockHeroText>
        <Fragment slot="headline">
          <TextReveal
            tag="h2"
            class="font-heading text-fluid-h2 text-balance font-semibold"
          >
            Meet a few of the experts behind your designs
          </TextReveal>
        </Fragment>

        <Fragment slot="description">
          <p class="max-w-[65ch] text-17 md:text-21 text-grey text-balance">
            Lorem ipsum dolor sit amet consectetur. Vivamus interdum nisl
            adipiscing mattis ornare nam purus eget. Vitae ultrices fringilla
            semper eget in vel fermentum. Quam sed volutpat id dictum arcu.
            Viverra feugiat ultrices hendrerit in mauris nulla diam. Nec turpis
            imperdiet in risus quisque in aliquam. Amet risus pellentesque
            lectus ut scelerisque velit.
          </p>
        </Fragment>
      </BlockHeroText>
    </section>

    <section class={classSection}>
      <BlockCarouselProfiles color="purple" />
    </section>

    <section class={classSection}>
      <BlockFAQs color="purple" shape="pentagon" />
    </section>

    <section class={classSection}>
      <LayoutTheme theme="light" class={classSectionThick}>
        <BlockGoogle />
      </LayoutTheme>
    </section>

    <section class={classSection}>
      <BlockPrompt>
        <CardPrompt shape="pentagon" color="purple">
          <Fragment slot="headline">
            <h3
              class="font-heading font-semibold text-fluid-h3 text-balance max-w-[20ch] lg:max-w-[14ch]"
            >
              Ready to start your design project?
            </h3>
          </Fragment>

          <Fragment slot="button">
            <Button
              text="Get a quote today"
              optionsHover={{
                bgColor: 'purple',
              }}
              hasArrow
            />
          </Fragment>
        </CardPrompt>
      </BlockPrompt>
    </section>

    <section class={classSection}>
      <BlockHeroText>
        <Fragment slot="headline">
          <TextReveal
            tag="h2"
            class="font-heading text-fluid-h2 text-balance font-semibold"
          >
            Other Services
          </TextReveal>
        </Fragment>
      </BlockHeroText>

      <section class={classSection}>
        <BlockServiceCards>
          <Fragment slot="cards">
            <CardService
              headline="SEO"
              description="Rank higher and grow your business faster with our leading SEO team. We'll get your site to the top of Google to increase revenue, leads and results."
              shape="square"
              color="green"
            >
              <img
                src="/images/test-service-3.webp"
                width="1032"
                height="430"
                alt=""
              />
            </CardService>

            <CardService
              headline="Paid Search"
              description="Fast-track your brand's visibility with data-driven paid media strategies. Across Google, Instagram, Facebook and LinkedIn, we help you reach your audience instantly."
              shape="circle"
              color="blue"
            >
              <img
                src="/images/test-service-3.webp"
                width="1032"
                height="430"
                alt=""
              />
            </CardService>
          </Fragment>
        </BlockServiceCards>
      </section>
    </section>
  </main>
</Layout>
