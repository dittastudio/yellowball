---
import { twMerge } from "tailwind-merge";
import Icon from "@/components/Elements/Icon.astro";

interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props as Props;

const classes = twMerge(
  "group inline-flex justify-center items-center gap-10 select-none",
  className
);
---

<a href={href} class:list={[classes]}>
  <slot />
  <span
    class="group-hover:translate-x-2 group-hover:-translate-y-2 transition-transform"
  >
    <Icon name="arrow-link" />
  </span>
</a>
