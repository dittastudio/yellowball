---
import { colourText } from '@/utils/maps';

interface Props {
  color?: ColorTypes;
  iconSize?: 'sm' | 'lg';
}

const { color = 'red', iconSize = 'sm' } = Astro.props as Props;
---

<span
  class:list={[
    'relative flex justify-center items-center size-40 md:size-50',
    'after:absolute after:inset-0',
    'after:border after:border-solid after:border-navy-lighter after:rounded-12',
    'bg-navy-light rounded-12',
    colourText[color],
  ]}
>
  <span
    class:list={[
      'cube__inner',
      iconSize === 'sm' ? 'size-22' : 'size-22 md:size-28',
    ]}
  >
    <slot />
  </span>
</span>

<style>
  .cube__inner {
    :global(svg) {
      width: 100%;
      height: 100%;
    }
  }
</style>
