<style is:global>
  [data-js='ticker'] {
    --speed: 20s;

    @keyframes tickerLeft {
      0% {
        translate: 0 0 0;
      }
      100% {
        translate: -100% 0 0;
      }
    }

    @keyframes tickerRight {
      0% {
        translate: 0 0 0;
      }
      100% {
        translate: 100% 0 0;
      }
    }

    [data-js-wrapper] {
      animation: tickerRight var(--speed) linear infinite paused;
    }

    [data-js-list] {
      animation: tickerLeft var(--speed) linear infinite;
    }
  }
</style>
