---
const main =
  'prose prose-headings:font-heading prose-headings:font-semibold text-15 md:text-18';
const h1 = 'prose-h1:text-fluid-h1';
const h2 = 'prose-h2:text-fluid-h2';
const h3 = 'prose-h3:text-fluid-h3';
const h4 = 'prose-h4:text-fluid-h4';
const h5 = 'prose-h5:text-fluid-h5';
const h6 = 'prose-h6:text-fluid-h6';
const headings =
  '[&_:is(h1,h2,h3,h4,h5,h6)]:mt-0 [&_:is(ul,ol,p)+:is(h1,h2,h3,h4,h5,h6)]:mt-50 [&_:is(h1,h2,h3,h4,h5,h6)]:mb-15 lg:[&_:is(h1,h2,h3,h4,h5,h6)]:mb-28';
const li = '[&_li]:mt-0 [&_li]:mb-10 [&_li]:pl-5';
const elements =
  '[&_:is(ul,ol,p)]:mt-0 [&_:is(ul,ol,p)]:mb-20 lg:[&_:is(ul,ol,p)]:mb-28';
const adjacentLists = '[&_p+:is(ul,ol)]:pt-5 lg:[&_p+:is(ul,ol)]:pt-0';
const lastElement = '[&_>*:last-child]:mb-0';
---

<div
  class:list={[
    main,
    h1,
    h2,
    h3,
    h4,
    h5,
    h6,
    headings,
    adjacentLists,
    li,
    elements,
    lastElement,
  ]}
>
  <slot />

  {
    Astro.slots.ctas && (
      <div class="sm:flex-row md:gap-20 md:mt-50 flex flex-col items-start justify-start gap-20 mt-20">
        <slot name="ctas" />
      </div>
    )
  }
</div>

<style is:global>
  /* .prose :where(h2):not(:where([class~='not-prose'], [class~='not-prose'] *)) {
    margin: 0;
  } */
</style>
