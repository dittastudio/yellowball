---
import { Icon } from 'astro-icon/components';

interface Props {
  headline: string;
  description: string;
  class?: string;
}

const hasSlotDefault = !!Astro.slots.default;

const {
  headline,
  description,
  class: className,
  ...rest
} = Astro.props as Props;
---

<div
  data-js="card-avatars"
  class:list={['w-full bg-white text-left rounded-30 lg:rounded-50', className]}
  {...rest}
>
  <a
    href="/"
    class="group w-full h-full rounded-30 lg:rounded-50 p-30 lg:p-50 flex flex-col justify-start items-start gap-30 border border-navy/15"
  >
    <div class="flex flex-col justify-start items-start gap-30">
      <div class="relative w-full">
        <h4
          class="font-heading font-semibold text-34 lg:text-48 text-balance text-navy"
        >
          {headline}
        </h4>

        <Icon
          name="arrow-ne"
          class="absolute right-0 top-15 block size-10 md:size-12 group-hover:translate-x-2 group-hover:-translate-y-2 transition-transform duration-300 shrink-0"
        />
      </div>

      <p class="font-normal text-15 lg:text-18 text-navy-lightest text-balance">
        {description}
      </p>
    </div>

    {
      hasSlotDefault && (
        <div class="w-full [&>img]:rounded-12 [&>img]:lg:rounded-16 grid grid-cols-5 gap-10 lg:gap-15">
          <slot />
        </div>
      )
    }
  </a>
</div>
