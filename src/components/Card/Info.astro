---
interface Props {
  title: string;
  class?: string;
}

const { title, class: className, ...rest } = Astro.props as Props;
---

<div
  class:list={[
    'w-full p-40 flex flex-col gap-20 text-white bg-navy-light border border-white/10 rounded-20',
    className,
  ]}
  {...rest}
>
  <div class="flex flex-col gap-12 md:gap-20">
    <p
      class="font-heading font-bold text-13 md:text-14 text-balance text-grey/50"
    >
      {title}
    </p>

    {
      Astro.slots.default && (
        <div>
          <slot />
        </div>
      )
    }
  </div>
</div>
