<script>
  import gsap from 'gsap';
  import { ScrollToPlugin } from 'gsap/dist/ScrollToPlugin';

  gsap.registerPlugin(ScrollToPlugin);

  const buttons = [
    ...document.querySelectorAll('[data-js=scroll-to-top]'),
  ] as HTMLElement[];

  buttons.forEach(button => {
    const scrollToTop = () => {
      gsap.to(window, {
        duration: 1,
        scrollTo: 0,
        ease: 'power3.inOut',
      });
    };

    button.addEventListener('click', scrollToTop);
  });
</script>

<button data-js="scroll-to-top" type="button">
  <slot />
</button>
