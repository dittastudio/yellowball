---
import type { HTMLAttributes } from 'astro/types';

interface Base {}

type Props = HTMLAttributes<'div'> & Base;

const { ...rest } = Astro.props as Props;
const classes = [
  'w-full overflow-x-auto bg-white rounded-10 lg:rounded-20',
  rest.class,
].filter(Boolean);
---

<!-- Begin Block: Table -->
<div class:list={classes}>
  <slot />
</div>
<!-- End Block: Table -->

<style is:global>
  table {
    @apply w-full table-auto text-15 lg:text-18 text-left;

    thead tr {
      @apply border-b border-navy/15;
    }

    tbody tr:not(:last-child) {
      @apply border-b border-navy/15;
    }

    th,
    td {
      @apply px-20 py-15 lg:px-30 lg:py-24;
    }

    th {
      @apply font-heading font-bold;
    }
  }
</style>
