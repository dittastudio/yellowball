---
import CardWork from '@/components/Card/Work.astro';
import CardWorkHero from '@/components/Card/WorkHero.astro';

const lgMedia = '(min-width: 1024px)';
---

<!-- Begin Block: CardGrid -->
<div class="wrapper">
  <ul
    class="grid grid-cols-8 md:grid-cols-12 gap-x-12 md:gap-x-30 gap-y-50 md:gap-y-80"
  >
    <li class="col-span-full">
      <CardWorkHero
        title="Ballet with Isabella"
        headline="Elite Online & Studio Ballet Training"
        description="A bespoke WordPress build featuring a customer login area, a member live area and an on-demand online studio which houses over 100 classes, courses, plans and workshops for ballet students."
        list={[
          {
            icon: 'outline-arrow-right-box',
            text: 'Bespoke customer login area',
          },
          {
            icon: 'outline-wallet',
            text: 'Online payments & subscription management',
          },
          {
            icon: 'outline-filters',
            text: 'Intuitive filters & content feeds',
          },
        ]}
        cta="Explore Project"
        color="yellow"
        hoverColor="#553BB4"
      >
        <picture>
          <source
            media={lgMedia}
            srcset="/images/test-work-desktop.png"
            width="573"
            height="559"
          />

          <img
            src="/images/test-work-mobile.png"
            width="295"
            height="287"
            alt="Insert alt here"
          />
        </picture>
      </CardWorkHero>
    </li>

    <li class="col-span-full lg:col-span-6">
      <CardWork
        title="Faith Ibiza"
        headline="VIP Ibiza Concierge Services"
        cta="Explore Project"
        color="yellow"
