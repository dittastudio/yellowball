---
import RichText from '@/components/Elements/RichText.astro';
---

<!-- Begin Block: StickyMap -->
<div class="wrapper">
  <div class="sticky-map grid gap-x-30 lg:gap-y-100 items-start">
    <div class="sticky-map__title col-span-full lg:col-span-5 lg:pt-[70%]">
      {Astro.slots.headline && <slot name="headline" />}
    </div>

    <div
      class="sticky-map__map col-span-full lg:col-span-7 lg:sticky lg:top-[var(--header-height)] lg:w-[150%] py-50 md:py-60 lgMax:-mx-[30%] lg:order-1"
    >
      <img src="/images/map.png" alt="Map" width="1068" height="556" />
    </div>

    <div class="sticky-map__text col-span-full lg:col-span-5 lg:pb-[60%]">
      {
        Astro.slots.richtext && (
          <RichText>
            <slot name="richtext" />
          </RichText>
        )
      }
    </div>
  </div>
</div>
<!-- End Block: StickyMap -->

<style is:global>
  .sticky-map {
    @media screen(lg) {
      grid-template-areas: 'title map' 'text map';
      grid-template-columns: 5fr 7fr;
    }
  }

  @media screen(lg) {
    .sticky-map__title {
      grid-area: title;
    }

    .sticky-map__text {
      grid-area: text;
    }

    .sticky-map__map {
      grid-area: map;
    }
  }
</style>
