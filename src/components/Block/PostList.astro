---
import CardPost from '@/components/Card/Post.astro';
import FormControl from '@/components/Fields/Control.astro';

const examplePost: any = {
  tags: [
    { title: 'Web Design', color: 'yellow' },
    { title: 'SEO', color: 'green' },
  ],
  headline: '10 Steps to a Reliable Website Marketing Strategy',
  time: '3 Min Read',
  image: {
    src: '/images/test-laptop.webp',
    alt: '',
    width: 500,
    height: 300,
  },
};

const examplePost2: any = {
  tags: [{ title: 'SEO', color: 'green' }],
  headline:
    'A Wordpress SEO Expert Approach to SEO Friendly Websites That Google Loves',
  time: '7 Min Read',
  image: {
    src: '/images/test-laptop.webp',
    alt: '',
    width: 500,
    height: 300,
  },
};

const examplePost3: any = {
  tags: [{ title: 'PPC', color: 'blue' }],
  headline: 'A Beginnerâ€™s Guide to Website Maintenance',
  time: '11 Min Read',
  image: {
    src: '/images/test-laptop.webp',
    alt: '',
    width: 500,
    height: 300,
  },
};

const examplePosts: any = [
  examplePost,
  examplePost2,
  examplePost3,
  examplePost,
  examplePost2,
  examplePost3,
  examplePost,
  examplePost2,
];
---

<!-- Begin Block: PostList -->
<div class="wrapper">
  <div
    class="gap-x-20 gap-y-40 pb-50 md:pb-60 flex flex-wrap items-center justify-between"
  >
    <h2 class="font-heading text-fluid-h3 font-semibold">All posts</h2>

    <div class="shrink-0 mdMax:w-full">
      <div class="mdMax:-mx-[var(--outer-gutter)]">
        <ul
          class="scroll-x py-2 mdMax:px-[var(--outer-gutter)] flex gap-10 md:gap-12 whitespace-nowrap"
        >
          <li>
            <FormControl
              type="checkbox"
              color="white"
              label="All posts"
              name="all"
              id="all"
              value="all"
            />
          </li>

          <li>
            <FormControl
              type="checkbox"
              color="yellow"
              label="Web Design"
              name="web-design"
              id="web-design"
              value="web-design"
            />
          </li>

          <li>
            <FormControl
              type="checkbox"
              color="green"
              label="SEO"
              name="seo"
              id="seo"
              value="seo"
            />
          </li>

          <li>
            <FormControl
              type="checkbox"
              color="blue"
              label="PPC"
              name="ppc"
              id="ppc"
              value="ppc"
            />
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="sm:grid-cols-2 lg:grid-cols-3 md:gap-30 grid grid-cols-1 gap-20">
    {
      examplePosts?.map(({ tags, headline, color, time, image }: any) => (
        <CardPost {tags} {headline} {color} {time}>
          <img
            src={image.src}
            alt={image.alt}
            width={image.width}
            height={image.height}
          />
        </CardPost>
      ))
    }
  </div>
</div>
<!-- End Block: PostList -->
