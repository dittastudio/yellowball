---
interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props as Props;
---

<!-- Begin Block: SplitTitleRichText -->
<div
  data-js="block-split-title-rich-text"
  class:list={[
    'wrapper grid gap-y-40 lg:gap-x-30 grid-cols-1 md:grid-cols-12 items-baseline',
    className,
  ]}
>
  <h3
    class="col-span-full lg:col-start-2 lg:col-span-3 text-15 lg:text-18 font-heading font-bold text-grey"
  >
    {title}
  </h3>

  <div class="col-span-full lg:col-span-7 flex flex-col gap-y-40 md:gap-y-80">
    <slot name="richtext" />
  </div>
</div>

<!-- End Block: SplitTitleRichText -->
