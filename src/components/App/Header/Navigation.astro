---
import { navList } from './data';

import AppHeaderNavigationList from '@/components/App/Header/NavigationList.astro';
---

<div class="header-navigation">
  <div data-lenis-prevent class="header-navigation__scroll">
    <div class="header-navigation__case">
      {
        navList.map(({ menuItems }, index) => (
          <AppHeaderNavigationList {menuItems} hasLogo={index === 0} />
        ))
      }
    </div>
  </div>
</div>

<style>
  .header-navigation {
    @media screen(mdMax) {
      @apply absolute left-0 px-12 pb-12 w-full;

      top: var(--header-height);
      height: calc(100vh - var(--header-height));
      height: calc(100svh - var(--header-height));
    }
  }

  .header-navigation__scroll {
    @media screen(mdMax) {
      @apply relative
        p-40
        rounded-16
        bg-navy-light
        border
        border-white/10
        w-full
        max-h-full
        overflow-y-auto
        overscroll-y-contain;
    }

    @media screen(mdMax) {
      @apply relative;
    }
  }

  .header-navigation__case {
    @media screen(md) {
      @apply flex justify-between;
    }
  }
</style>
