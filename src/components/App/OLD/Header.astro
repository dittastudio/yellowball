<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/dist/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const header = document.querySelector('[data-js="header"]') as HTMLElement;
  const navs = document.querySelectorAll(
    '[data-js-header-nav]',
  ) as NodeListOf<HTMLElement>;

  if (header) {
    // Theme Styles
    const sections = document.querySelectorAll(
      '[data-js-theme]',
    ) as NodeListOf<HTMLElement>;
    const halfHeaderHeight = header.clientHeight / 2;

    sections.forEach(section => {
      ScrollTrigger.create({
        markers: false,
        trigger: section,
        start: `top ${halfHeaderHeight}px`,
        end: `bottom ${halfHeaderHeight}px`,
        onToggle: ({ isActive }) => {
          const checkIfLightTheme =
            isActive && section.getAttribute('data-js-theme') === 'light';

          header.classList[checkIfLightTheme ? 'remove' : 'add'](
            'md:text-white',
          );
          header.classList[!checkIfLightTheme ? 'remove' : 'add'](
            'md:text-navy',
          );

          navs.forEach(nav => {
            nav.classList[checkIfLightTheme ? 'remove' : 'add'](
              'md:bg-offblack/10',
            );

            nav.classList[checkIfLightTheme ? 'remove' : 'add'](
              'md:border-white/10',
            );

            nav.classList[!checkIfLightTheme ? 'remove' : 'add'](
              'md:bg-grey-light/50',
            );
            nav.classList[!checkIfLightTheme ? 'remove' : 'add'](
              'md:border-grey-light/30',
            );
          });
        },
      });
    });

    const resizeObserver = new ResizeObserver(() => {
      requestAnimationFrame(() => {
        ScrollTrigger.refresh();
      });
    });

    const resizeTarget: HTMLBodyElement | any = document.querySelector('body');

    resizeObserver.observe(resizeTarget);

    //Menu
    const headerMenuButton = document.querySelector(
      '[data-js-header-menu-button]',
    ) as HTMLElement;
    const headerMenuButtonText = document.querySelector(
      '[data-js-header-menu-button-text]',
    ) as HTMLElement;
    const headerMenuInner = document.querySelector(
      '[data-js-header-menu-inner]',
    ) as HTMLElement;

    let isMenuOpen = false;

    let mm = gsap.matchMedia();

    mm.add('(max-width: 767px)', () => {
      const setupAnimation = gsap.set(headerMenuInner, {
        autoAlpha: 0,
      });

      return () => {
        setupAnimation.kill(); // Kill the animation instance
        gsap.set(headerMenuInner, { clearProps: 'all' }); // Clear all inline styles
      };
    });

    const openMenu = () => {
      isMenuOpen = true;
      headerMenuButtonText.textContent = 'Close';
      window.lenis.stop();

      mm.add('(max-width: 769px)', () => {
        const closeMenuAnimation = gsap.to(headerMenuInner, {
          autoAlpha: 1,
          duration: 0.5,
          ease: 'power2.out',
        });

        return () => {
          closeMenuAnimation.kill(); // Kill the animation instance
          gsap.set(headerMenuInner, { clearProps: 'all' }); // Clear all inline styles
        };
      });
    };

    const closeMenu = () => {
      isMenuOpen = false;
      headerMenuButtonText.textContent = 'Menu';
      window.lenis.start();

      mm.add('(max-width: 769px)', () => {
        const closeMenuAnimation = gsap.to(headerMenuInner, {
          autoAlpha: 0,
          duration: 0.25,
          ease: 'power2.out',
        });

        return () => {
          closeMenuAnimation.kill(); // Kill the animation instance
          gsap.set(headerMenuInner, { clearProps: 'all' }); // Clear all inline styles
        };
      });
    };

    headerMenuButton.addEventListener('click', () => {
      isMenuOpen = !isMenuOpen;

      if (isMenuOpen) {
        openMenu();
      } else {
        closeMenu();
      }
    });

    document.addEventListener('click', (event: MouseEvent) => {
      const target = event.target as Element | null;

      if (isMenuOpen && target && !header.contains(target)) {
        closeMenu();
      }
    });

    //SubMenus
    const navItems = document.querySelectorAll(
      '[data-js-header-nav-item]',
    ) as NodeListOf<HTMLElement>;

    navItems.forEach(item => {
      const itemButton = item.querySelector(
        '[data-js-header-nav-item-button]',
      ) as HTMLElement;
      const itemSubMenu = item.querySelector(
        '[data-js-header-nav-item-submenu]',
      ) as HTMLElement;
      const itemSubMenuBack = item.querySelector(
        '[data-js-header-nav-item-submenu-back]',
      ) as HTMLElement;
      const itemSubMenuInner = item.querySelector(
        '[data-js-header-nav-item-submenu-inner]',
      ) as HTMLElement;

      const headerNavButtons = header.querySelectorAll(
        '[data-js-header-nav-item-button]',
      ) as NodeListOf<HTMLElement>;
      const headerNavLinks = header.querySelectorAll(
        '[data-js-header-nav-item-link]',
      ) as NodeListOf<HTMLElement>;
      const headerMenuFooter = header.querySelector(
        '[data-js-header-menu-footer]',
      ) as HTMLElement;

      gsap.set(itemSubMenu, {
        x: 16,
        autoAlpha: 0,
      });

      let isAnimating = false;

      const openSubMenu = () => {
        if (isAnimating) return;

        item.classList.remove('mdMax:relative');
        item.classList.remove('mdMax:overflow-hidden');

        let tl = gsap.timeline();

        tl.to([headerNavButtons, headerNavLinks, headerMenuFooter], {
          autoAlpha: 0,
          duration: 0.3,
          ease: 'power4.out',
          onStart: () => {
            isAnimating = true;
          },
        })
          .to(
            headerMenuInner,
            {
              height: Math.ceil(itemSubMenuInner.offsetHeight || 0) + 3, // accounts for 1px border around scroll container
              duration: 0.4,
              ease: 'back.out(0.6)',
            },
            '<50%',
          )
          .to(
            itemSubMenu,
            {
              x: 0,
              autoAlpha: 1,
              duration: 0.5,
              ease: 'power4.out',
              onComplete: () => {
                isAnimating = false;
              },
            },
            '<50%',
          );
      };

      const closeSubMenu = () => {
        if (isAnimating) return;

        let tl = gsap.timeline();

        tl.to(itemSubMenu, {
          x: 16,
          autoAlpha: 0,
          duration: 0.25,
          ease: 'power4.out',
          onStart: () => {
            isAnimating = true;
          },
        })
          .to(
            headerMenuInner,
            {
              height: 'auto',
              duration: 0.4,
              ease: 'back.out(0.6)',
            },
            '<50%',
          )
          .to(
            [headerNavButtons, headerNavLinks, headerMenuFooter],
            {
              autoAlpha: 1,
              duration: 0.3,
              ease: 'power4.out',
              onComplete: () => {
                isAnimating = false;
                item.classList.add('mdMax:relative');
                item.classList.add('mdMax:overflow-hidden');
              },
            },
            '<50%',
          );
      };

      if (itemButton && itemSubMenu && itemSubMenuInner) {
        itemButton.addEventListener('click', () => {
          const isOpen = itemButton.classList.toggle('is-subnav-open');

          if (isOpen) {
            openSubMenu();
          } else {
            closeSubMenu();
          }
        });

        itemSubMenuBack?.addEventListener('click', () => {
          closeSubMenu();

          itemButton.classList.remove('is-subnav-open');
        });
      }
    });
  }
</script>

