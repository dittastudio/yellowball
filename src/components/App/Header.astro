---
import AppHeaderLogo from "@/components/App/HeaderLogo.astro";

const glossBg =
  "flex bg-offblack/10 backdrop-blur-20 rounded-16 border border-white/10 p-4";

const classLink =
  "block text-15 text-white text-center font-heading font-bold px-24 py-15 rounded-12";
---

<header class="sticky top-0 z-50 flex justify-between">
  <nav class={glossBg}>
    <AppHeaderLogo />

    <ul class="w-auto flex items-center justify-start">
      <li>
        <a href="/" class:list={[classLink]}>Services</a>
      </li>
      <li>
        <a href="/" class:list={[classLink]}>Our Work</a>
      </li>
      <li>
        <a href="/" class:list={[classLink]}>Agency</a>
      </li>
    </ul>
  </nav>

  <nav class={glossBg}>
    <ul class="w-auto flex items-center justify-start">
      <li>
        <a href="/" class:list={[classLink]}>Guides</a>
      </li>
      <li>
        <a href="/" class:list={[classLink]}>Contact</a>
      </li>
      <li>
        <a href="/" class:list={[classLink, "bg-navy"]}>Work with us</a>
      </li>
    </ul>
  </nav>
</header>
