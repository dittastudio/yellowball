---
import type { HTMLAttributes } from 'astro/types';

interface Base {
  label: string;
}

type Props = HTMLAttributes<'input'> & Base;

const { label, ...rest } = Astro.props as Props;
---

<div class="relative w-full flex flex-col">
  <input
    class="peer font-heading text-18 lg:text-22 border-b border-offblack text-grey focus:border-white focus:outline-none focus:text-white pb-18 lg:pb-20 transition-colors rounded-none"
    placeholder=""
    {...rest}
  />

  <label
    for={rest.id}
    class:list={[
      'absolute -top-30 left-0 z-1 font-heading text-12 text-grey transition-all duration-300',
      'peer-focus:-top-30',
      'peer-focus:text-white',
      'peer-focus:text-12',
      'peer-focus:lg:text-12',
      'peer-placeholder-shown:top-0',
      'peer-placeholder-shown:text-18',
      'peer-placeholder-shown:lg:text-22',
      'peer-placeholder-shown:pointer-events-none',
    ]}
  >
    {label}
  </label>
</div>
